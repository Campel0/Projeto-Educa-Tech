<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <style>
        /* ... (seu style da tabela continua igual) ... */
        
        /* Estilo para o botão 'Excluir' parecer um link */
        .actions-links button.link-button {
            background: none;
            border: none;
            color: #e53935; /* Vermelho para perigo */
            cursor: pointer;
            padding: 0;
            font-size: 1em;
            font-family: Arial, Helvetica, sans-serif;
            margin-left: 10px;
        }
        .actions-links button.link-button:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="container container-large">
        <h2>Gerir Alunos</h2>
        
        <table class="alunos-table">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Usuário</th>
                    <th>Turma</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% alunos.forEach(aluno => { %>
                    <tr>
                        <td><%= aluno.nome %></td>
                        <td><%= aluno.usuario %></td>
                        <td><%= aluno.turma %></td>
                        <td class="actions-links">
                            
                            <a href="/admin/aluno/<%= aluno.id_aluno %>/editar">Editar</a>

                            <form method="POST" action="/admin/aluno/<%= aluno.id_aluno %>/excluir" style="display: inline;" 
                                  onsubmit="return confirm('Tem certeza que deseja excluir <%= aluno.nome %>? Esta ação não pode ser desfeita.');">
                                <button type="submit" class="link-button">Excluir</button>
                            </form>

                        </td>
                    </tr>
                <% }) %>
                <% if (alunos.length === 0) { %>
                    <% } %>
            </tbody>
        </table>

        <a href="/admin" class="btn btn-secondary" style="text-decoration: none; width: auto; margin-top: 20px;">Voltar ao Painel</a>
    </div>
</body>
</html>